<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/corner_gradient_background"
    android:orientation="vertical"
    tools:context=".views.activities.CreateActivity">

    <RelativeLayout
        android:id="@+id/RL_CreateToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/transparent"
        android:paddingVertical="5dp">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/IB_ArrowLeft"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:background="@color/transparent"
            android:contentDescription="@string/cd_back_arrow"
            android:src="@drawable/ic_arrow_left"
            android:tint="?mainTextColor"
            android:tooltipText="Back" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/FL_createActivityFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/RL_CreateToolbar"
        android:layout_gravity="top"
        android:paddingHorizontal="10dp" />

</RelativeLayout>
