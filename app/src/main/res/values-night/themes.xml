<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Copture" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->

        <!-- Fonts -->
        <item name="regularFont">@font/koho_medium</item>
        <item name="semiBoldFont">@font/koho_semibold</item>
        <item name="boldFont">@font/koho_bold</item>
        <!-- Page Transitions -->
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
        <item name="android:activityOpenEnterAnimation">@anim/fade_in</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_out</item>
        <item name="android:activityCloseExitAnimation">@anim/fade_out</item>

    </style>

    <style name="Dark.Theme.Copture" parent="Base.Theme.Copture">

        <item name="mainBackgroundColor">@color/nightBlack</item>
        <item name="altBackgroundColor">@color/smokyBlack</item>
        <item name="contrastBackgroundColor">@color/platinum</item>
        <item name="mainTextColor">@color/brightColor_700</item>
        <item name="altTextColor">@color/celestialBlue</item>
        <item name="contrastTextColor">@color/darkColor_700</item>
        <item name="mainIconColor">@color/royalBlue</item>
        <item name="altIconColor">?attr/mainTextColor</item>
        <item name="customCardBackgroundColor">@color/darkColor_500</item>
        <item name="customCardElevation">50dp</item>
        <item name="customCardCornerRadius">20dp</item>
        <item name="customInputFieldBackground">?attr/altBackgroundColor</item>
        <item name="customInputFieldIconColor">?attr/mainIconColor</item>
        <item name="customInputFieldHintColor">@color/royalBlue</item>
        <item name="customInputFieldInputColor">?attr/mainTextColor</item>
        <item name="customInputFieldErrorColor">@color/errorColor_900</item>

    </style>
</resources>
